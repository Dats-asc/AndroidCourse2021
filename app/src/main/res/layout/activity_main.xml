<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkVkTheme"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iw_backArrow"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="id356860731"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintStart_toEndOf="@id/iw_backArrow"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Указать короткое имя"
            android:textColor="@color/lightBlue"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/tv_id"
            app:layout_constraintTop_toBottomOf="@id/tv_id" />

        <ImageView
            android:id="@+id/iv_qrCode"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_qr_code_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/customborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_header">
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profileInfo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_header">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="60dp"
            app:layout_constraintBottom_toBottomOf="@id/cl_profileInfo"
            app:layout_constraintStart_toStartOf="@id/cl_profileInfo"
            app:layout_constraintTop_toTopOf="@id/cl_profileInfo">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/profilephoto" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Рустам Хайруллин"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/cv_profilePicture"
            app:layout_constraintTop_toTopOf="@id/cl_profileInfo" />

        <TextView
            android:id="@+id/tv_setStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Установить статус"
            android:textColor="@color/lightBlue"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/et_name"
            app:layout_constraintTop_toBottomOf="@id/et_name" />

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="online"
            android:textColor="@color/lightGray"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@id/tv_setStatus"
            app:layout_constraintTop_toBottomOf="@id/tv_setStatus" />

        <ImageView
            android:id="@+id/iv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            app:srcCompat="@drawable/ic_baseline_ad_units_24"
            app:layout_constraintStart_toEndOf="@id/tv_online"
            app:layout_constraintTop_toTopOf="@id/tv_online"
            app:layout_constraintBottom_toBottomOf="@id/tv_online"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:text="Редактировать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_profileInfo"

        android:textColor="@color/white"
        android:textSize="14dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        >

        <ImageView
            android:id="@+id/iv_story"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_photo_camera_24"
            app:layout_constraintEnd_toStartOf="@id/iv_note"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="История"
            android:textColor="@color/lightBlue"
            app:layout_constraintTop_toBottomOf="@id/iv_story"
            app:layout_constraintStart_toStartOf="@id/iv_story"
            app:layout_constraintEnd_toEndOf="@id/iv_story"/>

        <ImageView
            android:id="@+id/iv_note"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_edit_24"
            app:layout_constraintStart_toEndOf="@id/iv_story"
            app:layout_constraintEnd_toStartOf="@id/iv_photo"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запись"
            android:textColor="@color/lightBlue"
            app:layout_constraintTop_toBottomOf="@id/iv_note"
            app:layout_constraintStart_toStartOf="@id/iv_note"
            app:layout_constraintEnd_toEndOf="@id/iv_note"/>

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@id/iv_clip"
            app:layout_constraintStart_toEndOf="@id/iv_note"
            app:srcCompat="@drawable/ic_baseline_photo_24"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фото"
            android:textColor="@color/lightBlue"
            app:layout_constraintTop_toBottomOf="@id/iv_photo"
            app:layout_constraintStart_toStartOf="@id/iv_photo"
            app:layout_constraintEnd_toEndOf="@id/iv_photo"/>

        <ImageView
            android:id="@+id/iv_clip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@id/iv_photo"
            app:srcCompat="@drawable/ic_baseline_music_video_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Клип"
            android:textColor="@color/lightBlue"
            app:layout_constraintEnd_toEndOf="@id/iv_clip"
            app:layout_constraintStart_toStartOf="@id/iv_clip"
            app:layout_constraintTop_toBottomOf="@id/iv_clip" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@drawable/customborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actions">
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_infoBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/fl_underline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:text="Город: Приютово"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:text="Место учёбы: Школа №7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_city"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_subs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:text="9 подписчиков"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_school"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightBlue"
            android:text="Указать место работы"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subs"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightBlue"
            android:text="Подробная информация"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_work"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_underline2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@drawable/customborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_infoBoard">
    </FrameLayout>

        <TextView
            android:id="@+id/tv_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ДРУЗЬЯ"
            android:textSize="12dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/fl_underline2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/tv_countOfFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/lightGray"
            android:textSize="12dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/tv_friends"
            app:layout_constraintBottom_toBottomOf="@id/tv_friends"
            app:layout_constraintStart_toEndOf="@id/tv_friends"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@color/lightGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/fl_underline2"
            android:textSize="18dp"
            android:layout_margin="15dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_friendList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_friends">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profilePick1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cv_profilePick2"
            app:layout_constraintVertical_chainStyle="spread_inside">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/profilepick1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Renat Murtazin"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cv_profilePick1"
            app:layout_constraintStart_toStartOf="@id/cv_profilePick1"
            app:layout_constraintEnd_toEndOf="@id/cv_profilePick1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profilePick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_profilePick1"
            app:layout_constraintEnd_toStartOf="@id/cv_profilePick3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/profilepick3" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Олег Соловяненко"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cv_profilePick2"
            app:layout_constraintStart_toStartOf="@id/cv_profilePick2"
            app:layout_constraintEnd_toEndOf="@id/cv_profilePick2"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profilePick3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_profilePick2"
            app:layout_constraintEnd_toStartOf="@id/cv_profilePick4">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/profilepick2" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Ришат Сабиров"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cv_profilePick3"
            app:layout_constraintStart_toStartOf="@id/cv_profilePick3"
            app:layout_constraintEnd_toEndOf="@id/cv_profilePick3"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profilePick4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_profilePick3"
            app:layout_constraintEnd_toStartOf="@id/cv_profilePick5">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/profilepick4" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Максим Иванов"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cv_profilePick4"
            app:layout_constraintStart_toStartOf="@id/cv_profilePick4"
            app:layout_constraintEnd_toEndOf="@id/cv_profilePick4"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profilePick5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_profilePick4"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/profilepick5" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Максим Петров"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cv_profilePick5"
            app:layout_constraintStart_toStartOf="@id/cv_profilePick5"
            app:layout_constraintEnd_toEndOf="@id/cv_profilePick5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_underline3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@drawable/customborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_friendList">
    </FrameLayout>

    <TextView
        android:id="@+id/tv_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ФОТОГРАФИИ"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/fl_underline3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="12dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/lightGray"
        app:layout_constraintTop_toTopOf="@id/tv_photos"
        app:layout_constraintStart_toEndOf="@id/tv_photos"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textColor="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fl_underline3"
        android:textSize="18dp"
        android:layout_margin="10dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_photos"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="135dp"
            app:srcCompat="@drawable/profilepick6" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>