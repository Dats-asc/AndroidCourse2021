<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background_gradient"
    tools:context=".PlayerActivity">

    <ImageView
        android:id="@+id/iv_song_cover"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_previous_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_play_pause_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_skip_previous_24"/>

    <ImageView
        android:id="@+id/iv_play_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_previous_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_previous_btn"
        app:layout_constraintEnd_toStartOf="@id/iv_next_btn"
        android:src="@drawable/ic_baseline_pause_24"/>

    <ImageView
        android:id="@+id/iv_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_play_pause_btn"
        app:layout_constraintStart_toEndOf="@id/iv_play_pause_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_skip_next_24"/>

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_song_cover"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGray"
        app:layout_constraintStart_toStartOf="@id/tv_song_name"
        app:layout_constraintTop_toBottomOf="@id/tv_song_name"/>

    <SeekBar
        android:id="@+id/sb_song_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_play_pause_btn"
        android:layout_marginBottom="8dp"
        android:progressBackgroundTint="@color/lightGray"/>


</androidx.constraintlayout.widget.ConstraintLayout>